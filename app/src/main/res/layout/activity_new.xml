<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:Android="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_weight="1">
    <include layout="@layout/view_toolbar" />

    <LinearLayout
        android:background="#ffffff"
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="8dp"
        Android:focusable="true">


        <EditText
            android:padding="5dp"
            android:hint="问题标题"
            android:id="@+id/title_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:enabled="true"
            android:gravity="top"
            android:inputType="text"
            android:maxLines="2"
            android:scrollbars="vertical"></EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_secondary"/>


        <EditText
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:hint="写下您的详细问题..."
            android:id="@+id/new_answercontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:enabled="true"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:minLines="8"
            android:scrollbars="vertical"></EditText>

    </LinearLayout>

    <RelativeLayout
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_tag_newpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:text="无标签" />

        <Button
            android:id="@+id/bt_tag_newpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_tag_newpage"
            android:layout_toRightOf="@+id/tv_tag_newpage"
            android:background="@drawable/buttonshape"
            android:text="选择标签" />

        <TextView
            android:id="@+id/tag1_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/bt_tag_newpage"
            android:text=" "
            android:textColor="@color/text_primary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tag2_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tag1_new"
            android:text=" "
            android:textColor="@color/text_primary"
            android:textSize="20sp" />

    </RelativeLayout>


</LinearLayout>