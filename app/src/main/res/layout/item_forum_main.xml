<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/item_forum"
    >
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/user_icon_forum"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#916a" />
            <TextView
                android:layout_marginStart="8dp"
                android:id="@+id/username_forum"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:text="菠萝小莫"
                android:layout_marginLeft="8dp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="#6a7e" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/title_forum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="问题标题问题标题问题标题问题标题问题标题问题标题问题标题问题标题问题标题问题标题问题标题问题标题"     android:ellipsize="end"
            android:textStyle="bold"
            android:maxLines="5"/>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/count_answer_forum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 回答"/>
            <TextView
                android:id="@+id/TAG1_forum"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="android"/>
            <TextView
                android:id="@+id/TAG2_forum"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="移动开发"/>
        </LinearLayout>

</LinearLayout>