<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_forum"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_icon_forum"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/username_forum"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="菠萝小莫" />

        <ImageView
            android:id="@+id/user_state_forum"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/teacher"
            android:scaleType="fitXY"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/title_forum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="5"
        android:text="问题标题问题标题问题标题问题标题问题标题问题标题问题标题问题标题问题标题问题标题问题标题问题标题"
        android:textSize="16dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/count_answer_forum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 回答" />

        <TextView
            android:id="@+id/TAG1_forum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="android" />

        <TextView
            android:id="@+id/TAG2_forum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="移动开发" />
    </LinearLayout>

</LinearLayout>