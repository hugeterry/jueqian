<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
    <TextView
        android:textColor="@color/title_color"
        android:textSize="@dimen/sp_18"
        android:id="@+id/title_questionpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我是题目" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_16"
            android:id="@+id/tag1_questionpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAG1" />

        <TextView
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_16"
            android:id="@+id/tag2_questionpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="TAG2" />
    </LinearLayout>

    <TextView
        android:textSize="@dimen/sp_16"
        android:textColor="@color/content_color"
        android:id="@+id/content_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题问题" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_alignParentRight="true"
            android:textColor="#000"
            android:id="@+id/username_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作者名字" />

        <TextView
            android:paddingTop="3dp"
            android:layout_below="@+id/username_question"
            android:id="@+id/time_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="发表于:xxxx-xx-xx xx:xx" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

