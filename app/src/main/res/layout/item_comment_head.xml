<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="15dp">

            <LinearLayout
                android:id="@+id/layout_comment_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/usericon_comment_head"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/username_comment_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:text="admin" />

                <ImageView
                    android:id="@+id/lebal_head"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@mipmap/teacher" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/delete_answer"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/text_white"
                        android:src="@drawable/delete" />
                </RelativeLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/answer_content_comment_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_comment_head"
                android:paddingTop="10dp"
                android:text="testtesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttest" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
