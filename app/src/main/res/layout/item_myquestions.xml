<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/dp_4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16">

        <ImageView
            android:id="@+id/item_myquestions_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16"
            android:src="@drawable/iv_mycollection_answer" />

        <TextView
            android:id="@+id/item_myquestions_tv_questiontitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/item_myquestions_iv"
            android:text="你为什么是一个傻逼你为什么是一个傻逼你为什么是一个傻逼？"
            android:textColor="#000000"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
</android.support.v7.widget.CardView>